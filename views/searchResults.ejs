<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    
    <%- include('partials/header', { title: 'Search Results', headerTitle: 'Search Results' }) %>

    <main class="container mt-4">
        <div id="cryptoList" class="row">
            <% if (filteredCryptos.length > 0) { %>
                <% filteredCryptos.forEach(crypto => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <img src="<%= crypto.image %>" class="card-img-top" alt="<%= crypto.name %>">
                            <div class="card-body">
                                <h5 class="card-title"><%= crypto.name %></h5>
                                <p class="card-text">Price: $<%= crypto.current_price %></p>
                                <a href="/coin/<%= crypto.id %>" class="btn btn-primary">View Details</a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No results found for your search.</p>
            <% } %>
        </div>
    </main>
    <%- include('partials/footer') %>
</body>
</html>